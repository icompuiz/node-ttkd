h1 Edit Program
br

.col-md-8.col-sm-8
	form.form-group
		.input-group
			input(type='text', class='form-control', placeholder='Program name' ng-model="editing.name")
			span(class='input-group-addon')
				span(class='glyphicon glyphicon-ok input-valid')

		h2 Classes
		table.table
			tr
				th.col-md-4.col-sm-4.col-lg-4.col-xs-4 Name
				th.col-md-4.col-sm-4.col-lg-4.col-xs-4 Meeting time
				th.col-md-4.col-sm-4.col-lg-4.col-xs-4 Students
				th
			tr(ng-repeat='class in editing.classes')
				td 
					{{class.name}}
				td
					a(href='#') M 5:00PM-6:30PM
				td
					a(href='#') Students
				td
					button.btn.btn-danger.glyphicon.glyphicon-remove.pull-right(type='button' ng-click='removeClassFromProgram(class, editing)')
			tr
				td
					input.form-control(type='text', placeholder='Class name' ng-model='newClass.name')
				td
					input.btn.btn-default(type='button', value='Add time')
				td
					input.btn.btn-default(type='button', value='Add students')
				td
					button.btn.btn-success.glyphicon.glyphicon-plus.pull-right(type='button' ng-click='addClassToProgram(editing)')

		h2 Ranks
		table.table
			tr
				th.col-md-4.col-sm-4.col-lg-4.col-xs-4 Name
				th.col-md-4.col-sm-4.col-lg-4.col-xs-4 Order 
				th.col-md-4.col-sm-4.col-lg-4.col-xs-4 Sub-ranks
				th
			tr(ng-repeat='rank in editing.ranks')
				td 
					{{rank.name}}
				td
					{{rank.rankOrder}}
				td
					a(href='#') SUB-RANKS
				td
					button.btn.btn-danger.glyphicon.glyphicon-remove.pull-right(type='button' ng-click='removeRankFromProgram(rank, editing)')
			tr
				td
					input.form-control(type='text', placeholder='Rank name' ng-model='newRank.name')
				td
					input.form-control(type='text', placeHolder='Rank order' ng-model='newRank.rankOrder')
				td
					input.btn.btn-default(type='button', value='Add sub-ranks')
				td
					button.btn.btn-success.glyphicon.glyphicon-plus.pull-right(type='button' ng-click='addRankToProgram(editing)')


		input.btn.btn-primary.pull-right(type='submit', value='Save Program', ng-click='saveProgram(editing)')
		input.btn.btn-warning.pull-right(type='reset', value='Cancel', ng-click='goToProgramsHome()')

		div(class='clearfix')
.col-md-8.col-sm-8