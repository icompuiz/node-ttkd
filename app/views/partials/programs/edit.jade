h1 Edit Program
br

.col-md-8.col-sm-8
	form.form-group
		.input-group
			input(type='text', class='form-control', placeholder='Program name' ng-model="currentProgram.name")
			span(class='input-group-addon')
				span(ng-show='!isEmpty(newProgram.name)', class='glyphicon glyphicon-ok input-valid')
				span(ng-show='isEmpty(newProgram.name)', class='glyphicon glyphicon-remove input-invalid')

		h2 Classes
		table.table
			tr
				th.col-md-6.col-sm-6.col-lg-6.col-xs-6 Name
				th.col-md-6.col-sm-6.col-lg-6.col-xs-6 Students
				th
			tr(ng-repeat='class in currentProgram.classes')
				td 
					{{class.name}}
				td
					a(href='#') Students
				td
					button.btn.btn-danger.glyphicon.glyphicon-remove.pull-right(type='button' ng-click='removeClass(class)')
			tr
				td
					input.form-control(type='text', placeholder='Class name' ng-model='newClass.name')
				td
					input.btn.btn-default(type='button', value='Add students')
				td
					button.btn.btn-success.glyphicon.glyphicon-plus.pull-right(ng-disabled='!isClassValid()' type='button' ng-click='addClass()')

		h2 Ranks
		table.table
			tr
				th.col-md-4.col-sm-4.col-lg-4.col-xs-4 Name
				th.col-md-4.col-sm-4.col-lg-4.col-xs-4 Order 
				th.col-md-4.col-sm-4.col-lg-4.col-xs-4 Sub-ranks
				th
			tr(ng-repeat='rank in currentProgram.ranks')
				td 
					{{rank.name}}
				td
					{{rank.rankOrder}}
				td
					a(href='#') SUB-RANKS
				td
					button.btn.btn-danger.glyphicon.glyphicon-remove.pull-right(type='button' ng-click='removeRank(rank)')
			tr
				td
					input.form-control(type='text', placeholder='Rank name' ng-model='newRank.name')
				td
					input.form-control(type='text', placeHolder='Rank order' ng-model='newRank.rankOrder')
				td
					input.btn.btn-default(type='button', value='Add sub-ranks')
				td
					button.btn.btn-success.glyphicon.glyphicon-plus.pull-right(ng-disabled='!isRankValid()' type='button' ng-click='addRank()')


		input.btn.btn-primary.pull-right(type='submit', value='Save Program', ng-click='saveProgram()')
		input.btn.btn-warning.pull-right(type='reset', value='Cancel', ng-click='cancelEdit()')

		div(class='clearfix')
.col-md-8.col-sm-8