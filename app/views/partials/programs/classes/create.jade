h1 Create Class
br

form.form-group
	h2 Name
	.input-group
		input(type='text', class='form-control', placeholder='Class name' ng-model="newClass.name")
		span(class='input-group-addon')
			span(ng-show='!isEmpty(newClass.name)', class='glyphicon glyphicon-ok input-valid')
			span(ng-show='isEmpty(newClass.name)', class='glyphicon glyphicon-remove input-invalid')
	h2 Students

	input.btn.btn-primary.pull-right(type='submit', value='Create Class', ng-click="createClass()")
	input.btn.btn-warning.pull-right(type='reset', value='Cancel', ng-click='cancelCreate()')

	div(class='clearfix')
