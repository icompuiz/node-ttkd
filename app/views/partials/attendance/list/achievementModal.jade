.heading-leftpad-6
	|Achievements for 
	{{attendance.checkInTime | date:shortDate}}
ul
	li(ng-repeat='achievement in attendance.achievementObjs')
		{{achievement.name}}
.btn-toolbar
	.btn-group
		.dropdown.top-level-dropdown
			button.btn.btn-sm.btn-success.viewBtn.dropdown-toggle(data-toggle='dropdown') Add Achievement 
				span.caret
			ul.dropdown-menu
				li(ng-repeat='rank in attendance.sortedRanks track by $index')
					a.trigger.right-caret(ng-click='expand($event, $index)')
						{{rank.name}}
					ul.dropdown-menu.sub-menu(id='{{rank.name}}')
						li
							a(href='#', ng-click='addAchievement(rank)')
								{{rank.name}}
						li(ng-repeat='subrank in subrankObjs')
							a(href='#', ng-click='addAchievement(subrank)')
								{{subrank.name}}

			//- button.btn.btn-success.btn-sm.viewBtn.dropdown-toggle(type='button', data-toggle='dropdown') Add Achievement 
			//- 	span.caret
			//- ul.dropdown-menu(role='menu')
			//- 	li(ng-repeat='rank in attendance.sortedRanks', role='presentation')
			//- 		a.dropdown-toggle(href='#', role='menuitem', tabindex='-1', ng-click='addAchievement(rank)')
			//- 			{{rank.name}}
	.btn-group
		.dropdown
			button.btn.btn-danger.btn-sm.viewBtn.dropdown-toggle(type='button', data-toggle='dropdown') Remove Achievement 
				span.caret
			ul.dropdown-menu(role='menu')
				li(ng-repeat='achievement in attendance.achievementObjs', role='presentation')
					a.dropdown-toggle(href='#', role='menuitem', tabindex='-1', ng-click='removeAchievement(achievement)')
						{{achievement.name}}