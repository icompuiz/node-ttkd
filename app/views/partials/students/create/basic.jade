			span.glyphicon.glyphicon-asterisk(ng-show="createStudent.emailAddress.$invalid && createStudent.emailAddress.$pristine")
			span.glyphicon.glyphicon-remove(ng-show="createStudent.emailAddress.$invalid && !createStudent.emailAddress.$pristine")
