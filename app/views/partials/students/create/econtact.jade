
h2 Primary Emergency Contact
div.input-group
	input.form-control(type='text', name="fullName1" placeholder='Full name', ng-model="model.fullName1", required, ng-maxlength='128', ng-minlength='4')
	span.input-group-addon
		span.glyphicon.glyphicon-info-sign(popover="Enter the primary emergency contact's full name.", ng-show="createStudent.fullName1.$invalid && createStudent.fullName1.$pristine", popover-trigger="mouseenter", popover-placement="left")
		span.glyphicon.glyphicon-remove(popover="Primary emergency contact's full name must be between 4 and 128 characters.", ng-show="createStudent.fullName1.$invalid && !createStudent.fullName1.$pristine", popover-trigger="mouseenter", popover-placement="left")
		span.glyphicon.glyphicon-ok(ng-show="createStudent.fullName1.$valid")

div.row.input-group
	div.col-md-6
		div.input-group
			input.form-control(type='tel', name="phoneNumber1" placeholder='Phone number', ng-model="model.phoneNumber1", ui-mask="{{'(999) 999-9999'}}", required)
			span.input-group-addon
				span.glyphicon.glyphicon-info-sign(popover="Enter the primary emergency contact's phone number.", ng-show="createStudent.phoneNumber1.$invalid && createStudent.phoneNumber1.$pristine", popover-trigger="mouseenter", popover-placement="left")
				span.glyphicon.glyphicon-remove(popover="Primary emergency contact's phone number must be a valid 10 digit number. E.g. 555-555-5555", ng-show="createStudent.phoneNumber1.$invalid && !createStudent.phoneNumber1.$pristine", popover-trigger="mouseenter", popover-placement="left")
				span.glyphicon.glyphicon-ok(ng-show="createStudent.phoneNumber1.$valid")

	div.col-md-6
		div.input-group
			input.form-control(type='text', name="relationship1" placeholder='Relationship', ng-model="model.relationship1", typeahead="relation for relation in relations | filter:$viewValue | limitTo:5", required)
			span.input-group-addon
				span.glyphicon.glyphicon-info-sign(popover="Enter the primary emergency contact's relation to the student.", ng-show="createStudent.relationship1.$invalid && createStudent.relationship1.$pristine", popover-trigger="mouseenter", popover-placement="left")
				span.glyphicon.glyphicon-remove(popover="Primary emergency contact must have some relation to the student.", ng-show="createStudent.relationship1.$invalid && !createStudent.relationship1.$pristine", popover-trigger="mouseenter", popover-placement="left")
				span.glyphicon.glyphicon-ok(ng-show="createStudent.relationship1.$valid")

